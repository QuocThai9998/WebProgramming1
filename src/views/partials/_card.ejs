                <!-- Div contains img and info about products -->
<div class="flex flex-col m-1 rounded-lg shadow-lg cursor-pointer overflow-hidden [&:hover_img]:scale-105"
    onclick="location.href='/users/customer/<%= product._id %>'">
                <!-- First div contains images of products -->
    <div class="flex overflow-hidden aspect-square">
        <img class='shadow-sm w-h-full object-scale-down transition-300' src="<%= product.imageCoverData %>" alt="hero-image-2">
    </div>
                <!-- First div contains images of products -->
                <!-- Second div contains info of products -->
    <div class="flex flex-col p-2">
                <!-- This div contains the name of products -->
        <div class="">
            <h2 class='font-mono font-extrabold text-lg text-left ellipsis-2'>
                <%- locals.product ? product.name : "Sample product" %>
            </h2>
        </div>
                <!-- This div contains the name of products -->
    <!-- This div contains description of products (ex: brand, usage, ...) -->
        <div class="">
            <p class="font-normal text-sm">
                <%- locals.product ? product.brand : "Sample brand" %>
            </p>
        </div>
    <!-- This div contains description of products (ex: brand, usage, ...) -->
            <!-- This div contains the ratings of products -->
        <div class="mt-1 flex flex-row rating"
            data-size="16px"
            data-card="card"
            data-rating="<%= product.rating %>"
            data-review-number="<%= product.reviewNumber %>">
        </div>
            <!-- This div contains the ratings of products -->
        <!-- This div contains numbers of reviews given by customers -->
        <!-- This div contains numbers of reviews given by customers -->
                <!-- This div contains the price of products -->
